<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateLeave">

    <EditText
        android:id="@+id/usernameupdate"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginBottom="28dp"
        android:text="Username"
        android:textColor="#FB8C00"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/dateupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absolutex="20dp" />

    <EditText
        android:id="@+id/dateupdate"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:text="Date"
        android:textColor="#FB8C00"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/reasonupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absolutex="20dp" />

    <EditText
        android:id="@+id/reasonupdate"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:text="Reason"
        android:textSize="25sp"
        android:textColor="#FB8C00"
        app:layout_constraintBottom_toTopOf="@+id/statusupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absolutex="20dp" />

    <EditText
        android:id="@+id/statusupdate"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:text="Status"
        android:textSize="25sp"
        android:textColor="#FB8C00"
        app:layout_constraintBottom_toTopOf="@+id/update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absolutex="20dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="204dp"
        android:text="Update"
        android:backgroundTint="#FB8C00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>