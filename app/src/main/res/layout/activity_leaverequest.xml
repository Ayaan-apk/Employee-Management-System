<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaveRequest">


    <TextView
        android:id="@+id/textView"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:layout_below="@id/leavereason"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="16dp"
        android:text="Date of Leave"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="4dp"
        android:text="Status:"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/Status"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userinfo"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="76dp"
        android:text="User Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567" />

    <EditText
        android:id="@+id/leavereason"
        android:layout_width="334dp"
        android:layout_height="71dp"
        android:layout_below="@id/Status"
        android:layout_marginBottom="64dp"
        android:layout_weight="1"
        android:hint="Write your reason here"
        android:inputType="textMultiLine"
        android:maxLines="50"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fetch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_marginBottom="32dp"
        android:text="Pending..."
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/leavereason"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fetch"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#FB8C00"
        android:text="Send Request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_edit_calendar_24" />


</androidx.constraintlayout.widget.ConstraintLayout>